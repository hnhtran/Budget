{% layout 'layout.liquid' %}
{% block content %}

<div class="container">
    <h2 class="page-header">Create Personalised Transactions Notes</h2>
    <a href="/bankacc"><button type="button" class="btn btn-primary btn-md">Bank Account</button></a>
    <a href="/user/logout"><button type="button" class="btn btn-primary btn-md">Log out</button></a>
    <form action="/notes" method="post">
        <div class="mb-3">
            <textarea type="text" class="form-control" id="note" name="note" placeholder="Add notes here"></textarea>
        </div>

        <button type="submit" class="btn btn-outline-primary btn-md">Adding note</button>
    </form>
</div>

{% endblock %}