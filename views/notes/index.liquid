{% layout 'layout.liquid' %} {% block content %}

<div class="container-md position-relative">
  <h2 class="page-header">Personalised Transactions Notes</h2>
  <a href="/bankacc"><button type="button" class="btn btn-primary btn-md">Bank Account</button></a>
  <a href="/user/logout"><button type="button" class="btn btn-danger btn-md">Log out</button></a>
  <table class="table table-bordered border-primary table-striped">
    <thead>
      <tr>
        <th scope="col">Note Made on Date</th>
        <th scope="col">Note</th>
      </tr>
    </thead>
    <tbody>
      {% for note in notes %}
      <tr>
        <td>
          {{note.noteDate | date: "%a %d %b %y"}}
        </td>
        <td>
          <a href="notes/{{note._id}}/edit">{{note.note}}</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% endblock %}